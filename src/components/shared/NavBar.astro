---
const links = [
  { href: '/', text: 'Listado' },
  { href: '/pokemons/1', text: 'Paginados' },
  { href: '/favorites', text: 'Favoritos' },
];

const currentPath = Astro.url.pathname;
---

<nav class="shadow bg-slate-900">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
    {
      links.map(({ href, text }: { href: string; text: string }) => (
        <div>
          <a href={href} class="text-gray-200 mx-1.5 sm:mx-6">
            {text}
          </a>
          {currentPath === href ? (
            <div
              transition:name="menu-line"
              class="border-b-2 border-blue-500 mx-5"
            />
          ) : (
            <div class="border-b-2 border-transparent" />
          )}
        </div>
      ))
    }
    <!-- {
      links.map(({ href, text }: { href: string; text: string }) => (
        <a
          href={href}
          class:list={[
            'text-gray-200 mx-1.5 sm:mx-"',
            {
              'border-b-2 border-blue-500': currentPath === href,
            },
          ]}
        >
          {text}
        </a>
      ))
    } -->
  </div>
</nav>
